<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- Header Image -->
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/header"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/header_image_description" />

    <!-- Calculator Button -->
    <Button
        android:id="@+id/btn_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculator"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#388E3C"
        android:contentDescription="@string/calculator_button_description" />

    <!-- About Me Button -->
    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_me"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#388E3C"
        android:contentDescription="@string/about_me_button_description" />

    <!-- Share URL Button -->
    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_url"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#388E3C"
        android:contentDescription="@string/share_button_description" />

    <!-- Instructions Button -->
    <Button
        android:id="@+id/btn_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#388E3C"
        android:contentDescription="@string/instructions_button_description" />

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Â© 2025 Your App Name"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center" />
</LinearLayout>
